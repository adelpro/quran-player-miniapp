<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Quran Player</title>
  <style>
    /* Open-Tarteel Design System */
    :root {
      --background: #ffffff;
      --foreground: #171717;
      --card: #f9fafb;
      --card-hover: #f3f4f6;
      --border: #e5e7eb;
      --border-hover: #d1d5db;
      --muted: #9ca3af;
      --primary: #0190dd;
      --primary-hover: #075985;
      --success: #10b981;
      --shadow-sm: 0 1px 2px rgba(0,0,0,0.05);
      --shadow: 0 4px 6px -1px rgba(0,0,0,0.1);
      --radius: 16px;
      --radius-sm: 8px;
      --transition: all 0.2s ease;
    }

    [data-theme="dark"] {
      --background: #0a0a0a;
      --foreground: #ededed;
      --card: #1f2937;
      --card-hover: #374151;
      --border: #374151;
      --border-hover: #4b5563;
      --muted: #9ca3af;
      --primary: #60a5fa;
      --primary-hover: #93c5fd;
      --shadow-sm: 0 1px 2px rgba(0,0,0,0.3);
      --shadow: 0 4px 6px -1px rgba(0,0,0,0.4);
    }

    * { margin: 0; padding: 0; box-sizing: border-box; }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      background: var(--background);
      color: var(--foreground);
      min-height: 100vh;
      transition: var(--transition);
    }

    .container {
      max-width: 420px;
      margin: 0 auto;
      padding: 20px;
      padding-bottom: 140px;
    }

    /* Header */
    .header {
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 16px 0 24px;
      position: relative;
    }

    .header h1 {
      font-size: 22px;
      font-weight: 600;
      letter-spacing: -0.5px;
    }

    .theme-toggle {
      position: absolute;
      right: 0;
      top: 50%;
      transform: translateY(-50%);
      background: transparent;
      border: none;
      padding: 8px;
      cursor: pointer;
      border-radius: 50%;
      color: var(--muted);
      transition: var(--transition);
    }

    .theme-toggle:hover {
      background: var(--card-hover);
      color: var(--foreground);
    }

    /* Cards */
    .card {
      background: var(--card);
      border: 1px solid var(--border);
      border-radius: var(--radius);
      padding: 20px;
      margin-bottom: 16px;
      transition: var(--transition);
      box-shadow: var(--shadow-sm);
    }

    .card:hover {
      border-color: var(--border-hover);
      box-shadow: var(--shadow);
    }

    .card-title {
      font-size: 13px;
      font-weight: 600;
      color: var(--muted);
      text-transform: uppercase;
      letter-spacing: 0.5px;
      margin-bottom: 14px;
    }

    /* Source tabs */
    .sources {
      display: flex;
      gap: 8px;
      overflow-x: auto;
      padding-bottom: 8px;
      scrollbar-width: none;
    }

    .sources::-webkit-scrollbar { display: none; }

    .source-tab {
      padding: 10px 18px;
      border-radius: 20px;
      border: 1px solid var(--border);
      background: var(--card);
      color: var(--muted);
      font-size: 14px;
      white-space: nowrap;
      cursor: pointer;
      transition: var(--transition);
    }

    .source-tab:hover {
      border-color: var(--primary);
      color: var(--primary);
    }

    .source-tab.active {
      background: var(--primary);
      border-color: var(--primary);
      color: white;
    }

    /* Search */
    .search-box {
      position: relative;
    }

    .search-input {
      width: 100%;
      padding: 14px 18px;
      padding-left: 48px;
      border: 1px solid var(--border);
      border-radius: var(--radius);
      background: var(--card);
      color: var(--foreground);
      font-size: 16px;
      outline: none;
      transition: var(--transition);
    }

    .search-input:focus {
      border-color: var(--primary);
      box-shadow: 0 0 0 3px rgba(1, 144, 221, 0.1);
    }

    .search-input::placeholder {
      color: var(--muted);
    }

    .search-icon {
      position: absolute;
      left: 16px;
      top: 50%;
      transform: translateY(-50%);
      width: 20px;
      height: 20px;
    }

    /* Reciter list */
    .reciter-list {
      display: flex;
      flex-direction: column;
      gap: 8px;
    }

    .reciter-item {
      display: flex;
      align-items: center;
      padding: 14px 16px;
      background: var(--card);
      border: 1px solid var(--border);
      border-radius: var(--radius-sm);
      cursor: pointer;
      transition: var(--transition);
    }

    .reciter-item:hover {
      background: var(--card-hover);
      border-color: var(--border-hover);
    }

    .reciter-item.active {
      background: var(--card-hover);
      border-color: var(--primary);
      border-width: 1.5px;
    }

    .reciter-radio {
      width: 20px;
      height: 20px;
      border-radius: 50%;
      border: 2px solid var(--border);
      margin-left: 14px;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: var(--transition);
      flex-shrink: 0;
    }

    .reciter-item.active .reciter-radio {
      border-color: var(--primary);
      background: var(--primary);
    }

    .reciter-item.active .reciter-radio::after {
      content: '';
      width: 8px;
      height: 8px;
      border-radius: 50%;
      background: white;
    }

    .reciter-info {
      flex: 1;
      min-width: 0;
    }

    .reciter-name {
      font-size: 15px;
      font-weight: 500;
    }

    .reciter-riwayah {
      font-size: 13px;
      color: var(--muted);
      margin-top: 2px;
    }

    /* Player - Fixed bottom */
    .player {
      position: fixed;
      bottom: 0;
      left: 50%;
      transform: translateX(-50%);
      width: 100%;
      max-width: 420px;
      background: var(--card);
      border-top: 1px solid var(--border);
      padding: 16px 20px 20px;
      box-shadow: 0 -4px 20px rgba(0,0,0,0.1);
      z-index: 100;
    }

    .player-content {
      display: flex;
      align-items: center;
      gap: 14px;
    }

    .player-avatar {
      width: 48px;
      height: 48px;
      border-radius: 12px;
      background: linear-gradient(135deg, var(--primary), var(--primary-hover));
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      font-weight: 600;
      font-size: 14px;
      flex-shrink: 0;
    }

    .player-info {
      flex: 1;
      min-width: 0;
    }

    .player-title {
      font-weight: 600;
      font-size: 15px;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }

    .player-artist {
      font-size: 13px;
      color: var(--muted);
      margin-top: 2px;
    }

    .player-controls {
      display: flex;
      align-items: center;
      gap: 6px;
    }

    .player-btn {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      border: none;
      background: transparent;
      color: var(--foreground);
      cursor: pointer;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: var(--transition);
    }

    .player-btn:hover {
      background: var(--card-hover);
    }

    .player-btn.play {
      background: var(--foreground);
      color: var(--background);
    }

    .player-btn.play:hover {
      opacity: 0.9;
    }

    .player-btn svg {
      width: 20px;
      height: 20px;
    }

    /* Progress */
    .progress {
      margin-top: 14px;
    }

    .progress-bar {
      width: 100%;
      height: 6px;
      background: var(--border);
      border-radius: 3px;
      overflow: hidden;
    }

    .progress-fill {
      width: 35%;
      height: 100%;
      background: var(--primary);
      border-radius: 3px;
    }

    .progress-time {
      display: flex;
      justify-content: space-between;
      font-size: 12px;
      color: var(--muted);
      margin-top: 6px;
      font-variant-numeric: tabular-nums;
    }
  </style>
</head>
<body>
  <div class="container">
    <!-- Header -->
    <div class="header">
      <h1>Quran Player</h1>
      <button class="theme-toggle" onclick="toggleTheme()" title="Toggle theme">
        <svg class="sun-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="display:none">
          <circle cx="12" cy="12" r="5"></circle>
          <line x1="12" y1="1" x2="12" y2="3"></line>
          <line x1="12" y1="21" x2="12" y2="23"></line>
          <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
          <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
          <line x1="1" y1="12" x2="3" y2="12"></line>
          <line x1="21" y1="12" x2="23" y2="12"></line>
          <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
          <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
        </svg>
        <svg class="moon-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
        </svg>
      </button>
    </div>

    <!-- Sources -->
    <div class="card">
      <div class="card-title">Sources</div>
      <div class="sources">
        <div class="source-tab active">itqan CMS</div>
        <div class="source-tab">mp3quran</div>
        <div class="source-tab">EveryAyah</div>
        <div class="source-tab">Quran.com</div>
      </div>
    </div>

    <!-- Search -->
    <div class="card search-box">
      <svg class="search-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <circle cx="11" cy="11" r="8"></circle>
        <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
      </svg>
      <input type="text" class="search-input" placeholder="Search reciter...">
    </div>

    <!-- Reciters -->
    <div class="card">
      <div class="card-title">Reciter</div>
      <div class="reciter-list">
        <div class="reciter-item active" onclick="selectReciter(this)">
          <div class="reciter-radio"></div>
          <div class="reciter-info">
            <div class="reciter-name">Badr Abdelrahman</div>
            <div class="reciter-riwayah">Riwaya Ashim</div>
          </div>
        </div>
        <div class="reciter-item" onclick="selectReciter(this)">
          <div class="reciter-radio"></div>
          <div class="reciter-info">
            <div class="reciter-name">Majed Al Zamel</div>
            <div class="reciter-riwayah">Riwaya Hafs</div>
          </div>
        </div>
        <div class="reciter-item" onclick="selectReciter(this)">
          <div class="reciter-radio"></div>
          <div class="reciter-info">
            <div class="reciter-name">Abdul Rahman Al Sudais</div>
            <div class="reciter-riwayah">Riwaya Shuaba</div>
          </div>
        </div>
        <div class="reciter-item" onclick="selectReciter(this)">
          <div class="reciter-radio"></div>
          <div class="reciter-info">
            <div class="reciter-name">Shaykh Abu Bakr Al Shatri</div>
            <div class="reciter-riwayah">Riwaya Qaloon</div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Player -->
  <div class="player">
    <div class="player-content">
      <div class="player-avatar">BA</div>
      <div class="player-info">
        <div class="player-title">Al-Fatihah</div>
        <div class="player-artist">Badr Abdelrahman â€¢ Riwaya Ashim</div>
      </div>
      <div class="player-controls">
        <button class="player-btn" title="Shuffle">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="16 3 21 3 21 8"></polyline>
            <line x1="4" y1="20" x2="21" y2="3"></line>
            <polyline points="21 16 21 21 16 21"></polyline>
            <line x1="15" y1="15" x2="21" y2="21"></line>
            <line x1="4" y1="4" x2="9" y2="9"></line>
          </svg>
        </button>
        <button class="player-btn" title="Previous">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polygon points="19 20 9 12 19 4 19 20"></polygon>
            <line x1="5" y1="19" x2="5" y2="5"></line>
          </svg>
        </button>
        <button class="player-btn play" title="Play">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polygon points="5 3 19 12 5 21 5 3"></polygon>
          </svg>
        </button>
        <button class="player-btn" title="Next">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polygon points="5 4 15 12 5 20 5 4"></polygon>
            <line x1="19" y1="5" x2="19" y2="19"></line>
          </svg>
        </button>
        <button class="player-btn" title="Repeat">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="17 1 21 5 17 9"></polyline>
            <path d="M3 11V9a4 4 0 0 1 4-4h14"></path>
            <polyline points="7 23 3 19 7 15"></polyline>
            <path d="M21 13v2a4 4 0 0 1-4 4H3"></path>
          </svg>
        </button>
      </div>
    </div>
    <div class="progress">
      <div class="progress-bar">
        <div class="progress-fill"></div>
      </div>
      <div class="progress-time">
        <span>0:00</span>
        <span>0:50</span>
      </div>
    </div>
  </div>

  <script>
    function updateTheme() {
      const isDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
      document.documentElement.setAttribute('data-theme', isDark ? 'dark' : 'light');
      updateThemeIcon(isDark);
    }

    function updateThemeIcon(isDark) {
      const sun = document.querySelector('.sun-icon');
      const moon = document.querySelector('.moon-icon');
      if (isDark) {
        sun.style.display = 'block';
        moon.style.display = 'none';
      } else {
        sun.style.display = 'none';
        moon.style.display = 'block';
      }
    }

    function toggleTheme() {
      const current = document.documentElement.getAttribute('data-theme');
      const isDark = current === 'dark';
      document.documentElement.setAttribute('data-theme', isDark ? 'light' : 'dark');
      updateThemeIcon(!isDark);
    }

    window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', updateTheme);
    updateTheme();

    function selectReciter(el) {
      document.querySelectorAll('.reciter-item').forEach(r => r.classList.remove('active'));
      el.classList.add('active');
    }

    document.querySelectorAll('.source-tab').forEach(tab => {
      tab.addEventListener('click', () => {
        document.querySelectorAll('.source-tab').forEach(t => t.classList.remove('active'));
        tab.classList.add('active');
      });
    });
  </script>
</body>
</html>
