<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Quran Mini Player</title>
  <style>
    :root {
      --background: #ffffff;
      --foreground: #171717;
      --card: #f9fafb;
      --card-hover: #f3f4f6;
      --border: #e5e7eb;
      --border-hover: #d1d5db;
      --muted: #9ca3af;
      --primary: #0190dd;
      --primary-hover: #075985;
      --shadow-sm: 0 1px 2px rgba(0,0,0,0.05);
      --shadow: 0 4px 6px -1px rgba(0,0,0,0.1);
      --radius: 16px;
      --radius-sm: 8px;
      --transition: all 0.2s ease;
    }

    [data-theme="dark"] {
      --background: #0a0a0a;
      --foreground: #ededed;
      --card: #1f2937;
      --card-hover: #374151;
      --border: #374151;
      --border-hover: #4b5563;
      --muted: #9ca3af;
      --primary: #60a5fa;
      --primary-hover: #93c5fd;
      --shadow-sm: 0 1px 2px rgba(0,0,0,0.3);
      --shadow: 0 4px 6px -1px rgba(0,0,0,0.4);
    }

    * { margin: 0; padding: 0; box-sizing: border-box; }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      background: var(--background);
      color: var(--foreground);
      min-height: 100vh;
      transition: var(--transition);
    }

    .container {
      max-width: 420px;
      margin: 0 auto;
      padding: 20px;
      padding-bottom: 140px;
    }

    /* Header */
    .header {
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 16px 0 24px;
      position: relative;
      gap: 12px;
    }

    .header h1 {
      font-size: 22px;
      font-weight: 600;
      letter-spacing: -0.5px;
    }

    .lang-toggle {
      position: absolute;
      right: 0;
      top: 50%;
      transform: translateY(-50%);
      background: transparent;
      border: 1px solid var(--border);
      padding: 6px 12px;
      border-radius: 20px;
      cursor: pointer;
      font-size: 13px;
      font-weight: 500;
      color: var(--muted);
      transition: var(--transition);
    }

    .lang-toggle:hover {
      border-color: var(--primary);
      color: var(--primary);
    }

    .lang-toggle.active {
      background: var(--primary);
      border-color: var(--primary);
      color: white;
    }

    /* Source dropdown */
    .source-section {
      margin-bottom: 16px;
    }

    .source-dropdown {
      position: relative;
    }

    .source-selected {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 14px 16px;
      background: var(--card);
      border: 1px solid var(--border);
      border-radius: var(--radius);
      cursor: pointer;
      transition: var(--transition);
    }

    .source-selected:hover {
      border-color: var(--border-hover);
    }

    .source-selected svg {
      width: 16px;
      height: 16px;
      transition: transform 0.2s;
    }

    .source-dropdown.open .source-selected svg {
      transform: rotate(180deg);
    }

    .source-options {
      position: absolute;
      top: 100%;
      left: 0;
      right: 0;
      background: var(--card);
      border: 1px solid var(--border);
      border-radius: var(--radius);
      margin-top: 4px;
      overflow: hidden;
      opacity: 0;
      visibility: hidden;
      transform: translateY(-10px);
      transition: all 0.2s;
      z-index: 10;
    }

    .source-dropdown.open .source-options {
      opacity: 1;
      visibility: visible;
      transform: translateY(0);
    }

    .source-option {
      padding: 14px 16px;
      cursor: pointer;
      transition: var(--transition);
      display: flex;
      align-items: center;
      gap: 12px;
    }

    .source-option:hover {
      background: var(--card-hover);
    }

    .source-option.selected {
      background: var(--primary);
      color: white;
    }

    /* Search */
    .search-box {
      position: relative;
      margin-bottom: 16px;
    }

    .search-input {
      width: 100%;
      padding: 14px 16px;
      padding-left: 48px;
      border: 1px solid var(--border);
      border-radius: var(--radius);
      background: var(--card);
      color: var(--foreground);
      font-size: 16px;
      outline: none;
      transition: var(--transition);
    }

    .search-input:focus {
      border-color: var(--primary);
      box-shadow: 0 0 0 3px rgba(1, 144, 221, 0.1);
    }

    .search-input::placeholder {
      color: var(--muted);
    }

    .search-icon {
      position: absolute;
      left: 16px;
      top: 50%;
      transform: translateY(-50%);
      width: 20px;
      height: 20px;
      color: var(--muted);
    }

    /* Reciter list */
    .reciter-section {
      margin-bottom: 16px;
    }

    .reciter-list {
      display: flex;
      flex-direction: column;
      gap: 8px;
    }

    .reciter-item {
      display: flex;
      align-items: center;
      padding: 14px 16px;
      background: var(--card);
      border: 1px solid var(--border);
      border-radius: var(--radius-sm);
      cursor: pointer;
      transition: var(--transition);
    }

    .reciter-item:hover {
      background: var(--card-hover);
      border-color: var(--border-hover);
    }

    .reciter-item.active {
      background: var(--card-hover);
      border-color: var(--primary);
      border-width: 1.5px;
    }

    .reciter-radio {
      width: 20px;
      height: 20px;
      border-radius: 50%;
      border: 2px solid var(--border);
      margin-left: 14px;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: var(--transition);
      flex-shrink: 0;
    }

    .reciter-item.active .reciter-radio {
      border-color: var(--primary);
      background: var(--primary);
    }

    .reciter-item.active .reciter-radio::after {
      content: '';
      width: 8px;
      height: 8px;
      border-radius: 50%;
      background: white;
    }

    .reciter-info {
      flex: 1;
      min-width: 0;
    }

    .reciter-name {
      font-size: 15px;
      font-weight: 500;
    }

    .reciter-riwayah {
      font-size: 13px;
      color: var(--muted);
      margin-top: 2px;
    }

    /* Player */
    .player {
      position: fixed;
      bottom: 0;
      left: 50%;
      transform: translateX(-50%);
      width: 100%;
      max-width: 420px;
      background: var(--card);
      border-top: 1px solid var(--border);
      padding: 16px 20px 20px;
      box-shadow: 0 -4px 20px rgba(0,0,0,0.1);
      z-index: 100;
    }

    .player-content {
      display: flex;
      align-items: center;
      gap: 14px;
    }

    .player-avatar {
      width: 48px;
      height: 48px;
      border-radius: 12px;
      background: linear-gradient(135deg, var(--primary), var(--primary-hover));
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      font-weight: 600;
      font-size: 14px;
      flex-shrink: 0;
    }

    .player-info {
      flex: 1;
      min-width: 0;
    }

    .player-title {
      font-weight: 600;
      font-size: 15px;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }

    .player-artist {
      font-size: 13px;
      color: var(--muted);
      margin-top: 2px;
    }

    .player-controls {
      display: flex;
      align-items: center;
      gap: 6px;
    }

    .player-btn {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      border: none;
      background: transparent;
      color: var(--foreground);
      cursor: pointer;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: var(--transition);
    }

    .player-btn:hover {
      background: var(--card-hover);
    }

    .player-btn.play {
      background: var(--foreground);
      color: var(--background);
    }

    .player-btn svg {
      width: 20px;
      height: 20px;
    }

    .progress {
      margin-top: 14px;
    }

    .progress-bar {
      width: 100%;
      height: 6px;
      background: var(--border);
      border-radius: 3px;
      overflow: hidden;
    }

    .progress-fill {
      width: 35%;
      height: 100%;
      background: var(--primary);
      border-radius: 3px;
    }

    .progress-time {
      display: flex;
      justify-content: space-between;
      font-size: 12px;
      color: var(--muted);
      margin-top: 6px;
      font-variant-numeric: tabular-nums;
    }

    /* RTL support */
    html[dir="rtl"] .reciter-radio {
      margin-left: 0;
      margin-right: 14px;
    }
  </style>
</head>
<body>
  <div class="container">
    <!-- Header -->
    <div class="header">
      <h1 id="page-title">Quran Mini Player</h1>
      <button class="lang-toggle" id="lang-toggle" onclick="toggleLang()">EN</button>
    </div>

    <!-- Source dropdown -->
    <div class="source-section">
      <div class="source-dropdown" id="source-dropdown">
        <div class="source-selected" onclick="toggleSource()">
          <span id="source-label">itqan CMS</span>
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="6 9 12 15 18 9"></polyline>
          </svg>
        </div>
        <div class="source-options">
          <div class="source-option selected" onclick="selectSource('itqan')" data-source="itqan">
            <span>üá∏üá¶ itqan CMS</span>
          </div>
          <div class="source-option" onclick="selectSource('mp3quran')" data-source="mp3quran">
            <span>üåê mp3quran</span>
          </div>
          <div class="source-option" onclick="selectSource('everyayah')" data-source="everyayah">
            <span>üéß EveryAyah</span>
          </div>
          <div class="source-option" onclick="selectSource('qurancom')" data-source="qurancom">
            <span>üìñ Quran.com</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Search -->
    <div class="search-box">
      <svg class="search-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <circle cx="11" cy="11" r="8"></circle>
        <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
      </svg>
      <input type="text" class="search-input" id="search-input" placeholder="Search reciter..." oninput="filterReciters()">
    </div>

    <!-- Reciters -->
    <div class="reciter-section">
      <div class="reciter-list" id="reciter-list">
        <!-- Reciters will be populated by JavaScript -->
      </div>
    </div>
  </div>

  <!-- Player -->
  <div class="player">
    <div class="player-content">
      <div class="player-avatar" id="player-avatar">BA</div>
      <div class="player-info">
        <div class="player-title" id="player-title">Al-Fatihah</div>
        <div class="player-artist" id="player-artist">Badr Abdelrahman ‚Ä¢ Riwaya Ashim</div>
      </div>
      <div class="player-controls">
        <button class="player-btn" title="Shuffle">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="16 3 21 3 21 8"></polyline>
            <line x1="4" y1="20" x2="21" y2="3"></line>
            <polyline points="21 16 21 21 16 21"></polyline>
            <line x1="15" y1="15" x2="21" y2="21"></line>
            <line x1="4" y1="4" x2="9" y2="9"></line>
          </svg>
        </button>
        <button class="player-btn" title="Previous">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polygon points="19 20 9 12 19 4 19 20"></polygon>
            <line x1="5" y1="19" x2="5" y2="5"></line>
          </svg>
        </button>
        <button class="player-btn play" title="Play">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polygon points="5 3 19 12 5 21 5 3"></polygon>
          </svg>
        </button>
        <button class="player-btn" title="Next">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polygon points="5 4 15 12 5 20 5 4"></polygon>
            <line x1="19" y1="5" x2="19" y2="19"></line>
          </svg>
        </button>
        <button class="player-btn" title="Repeat">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="17 1 21 5 17 9"></polyline>
            <path d="M3 11V9a4 4 0 0 1 4-4h14"></path>
            <polyline points="7 23 3 19 7 15"></polyline>
            <path d="M21 13v2a4 4 0 0 1-4 4H3"></path>
          </svg>
        </button>
      </div>
    </div>
    <div class="progress">
      <div class="progress-bar">
        <div class="progress-fill"></div>
      </div>
      <div class="progress-time">
        <span>0:00</span>
        <span>0:50</span>
      </div>
    </div>
  </div>

  <script>
    // Reciters data for each source
    const recitersData = {
      itqan: [
        { name: 'Badr Abdelrahman', riwaya: 'Riwaya Ashim', initials: 'BA' },
        { name: 'Majed Al Zamel', riwaya: 'Riwaya Hafs', initials: 'MZ' },
        { name: 'Abdul Rahman Al Sudais', riwaya: 'Riwaya Shuaba', initials: 'AS' },
        { name: 'Abu Bakr Al Shatri', riwaya: 'Riwaya Qaloon', initials: 'BS' },
      ],
      mp3quran: [
        { name: 'Mahmoud Khalil Al-Hussary', riwaya: 'Riwaya Hafs', initials: 'MH' },
        { name: 'Abdel Baset Abdel Samad', riwaya: 'Riwaya Hafs', initials: 'BB' },
        { name: 'Mohamed Siddiq Al-Minshawi', riwaya: 'Riwaya Hafs', initials: 'MS' },
        { name: 'Yasser Al-Dosari', riwaya: 'Riwaya Hafs', initials: 'YD' },
      ],
      everyayah: [
        { name: 'Mishary Rashid Alafasy', riwaya: 'Various', initials: 'MR' },
        { name: 'Saad Al-Ghamdi', riwaya: 'Riwaya Hafs', initials: 'SG' },
        { name: 'Sheikh Kareem', riwaya: 'Riwaya Hafs', initials: 'SK' },
      ],
      qurancom: [
        { name: 'Abdullah Basfar', riwaya: 'Riwaya Hafs', initials: 'AB' },
        { name: 'Hani Ar Rifai', riwaya: 'Riwaya Hafs', initials: 'HR' },
      ]
    };

    // Translations
    const translations = {
      en: {
        title: 'Quran Mini Player',
        source: 'Source',
        searchPlaceholder: 'Search reciter...',
        reciter: 'Reciter',
        noReciters: 'No reciters found',
      },
      ar: {
        title: 'ŸÖÿ¥ÿ∫ŸÑ ÿßŸÑŸÇÿ±ÿ¢ŸÜ',
        source: 'ÿßŸÑŸÖÿµÿØÿ±',
        searchPlaceholder: 'ÿßŸÑÿ®ÿ≠ÿ´ ÿπŸÜ ŸÇÿßÿ±ÿ¶...',
        reciter: 'ÿßŸÑŸÇÿßÿ±ÿ¶',
        noReciters: 'ŸÑŸÖ Ÿäÿ™ŸÖ ÿßŸÑÿπÿ´Ÿàÿ± ÿπŸÑŸâ ŸÇÿ±ÿßÿ°',
      }
    };

    let currentLang = 'en';
    let currentSource = 'itqan';

    // Initialize
    document.addEventListener('DOMContentLoaded', () => {
      updateTheme();
      renderReciters();
      updateThemeIcon();
    });

    // Theme functions
    function updateTheme() {
      const isDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
      document.documentElement.setAttribute('data-theme', isDark ? 'dark' : 'light');
    }

    function updateThemeIcon(isDark) {
      const icon = document.querySelector('.lang-toggle');
      if (isDark === undefined) {
        isDark = document.documentElement.getAttribute('data-theme') === 'dark';
      }
    }

    function toggleTheme() {
      const current = document.documentElement.getAttribute('data-theme');
      document.documentElement.setAttribute('data-theme', current === 'dark' ? 'light' : 'dark');
    }

    window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', (e) => {
      document.documentElement.setAttribute('data-theme', e.matches ? 'dark' : 'light');
    });

    // Language toggle
    function toggleLang() {
      currentLang = currentLang === 'en' ? 'ar' : 'en';
      document.documentElement.lang = currentLang;
      document.documentElement.dir = currentLang === 'ar' ? 'rtl' : 'ltr';
      document.getElementById('lang-toggle').textContent = currentLang === 'en' ? 'EN' : 'ÿπÿ±ÿ®Ÿä';
      updateTranslations();
    }

    function updateTranslations() {
      const t = translations[currentLang];
      document.getElementById('page-title').textContent = t.title;
      document.getElementById('source-label').textContent = t.source;
      document.getElementById('search-input').placeholder = t.searchPlaceholder;
      document.querySelector('.reciter-section .card-title')?.remove();
    }

    // Source dropdown
    function toggleSource() {
      document.getElementById('source-dropdown').classList.toggle('open');
    }

    function selectSource(source) {
      currentSource = source;
      document.querySelectorAll('.source-option').forEach(opt => {
        opt.classList.toggle('selected', opt.dataset.source === source);
      });
      
      const sourceNames = {
        itqan: 'itqan CMS',
        mp3quran: 'mp3quran',
        everyayah: 'EveryAyah',
        qurancom: 'Quran.com'
      };
      document.getElementById('source-label').textContent = sourceNames[source];
      document.getElementById('source-dropdown').classList.remove('open');
      
      renderReciters();
    }

    // Render reciters for current source
    function renderReciters() {
      const reciters = recitersData[currentSource] || [];
      const list = document.getElementById('reciter-list');
      
      if (reciters.length === 0) {
        list.innerHTML = `<div style="padding: 20px; text-align: center; color: var(--muted);">${translations[currentLang].noReciters}</div>`;
        return;
      }
      
      list.innerHTML = reciters.map((r, i) => `
        <div class="reciter-item ${i === 0 ? 'active' : ''}" onclick="selectReciter(this, '${r.initials}', '${r.name}', '${r.riwaya}')">
          <div class="reciter-radio"></div>
          <div class="reciter-info">
            <div class="reciter-name">${r.name}</div>
            <div class="reciter-riwayah">${r.riwaya}</div>
          </div>
        </div>
      `).join('');
    }

    // Filter reciters
    function filterReciters() {
      const query = document.getElementById('search-input').value.toLowerCase();
      const items = document.querySelectorAll('.reciter-item');
      
      items.forEach(item => {
        const name = item.querySelector('.reciter-name').textContent.toLowerCase();
        item.style.display = name.includes(query) ? 'flex' : 'none';
      });
    }

    // Select reciter
    function selectReciter(el, initials, name, riwaya) {
      document.querySelectorAll('.reciter-item').forEach(r => r.classList.remove('active'));
      el.classList.add('active');
      
      document.getElementById('player-avatar').textContent = initials;
      document.getElementById('player-title').textContent = 'Al-Fatihah';
      document.getElementById('player-artist').textContent = `${name} ‚Ä¢ ${riwaya}`;
    }

    // Close dropdown when clicking outside
    document.addEventListener('click', (e) => {
      if (!e.target.closest('.source-dropdown')) {
        document.getElementById('source-dropdown').classList.remove('open');
      }
    });
  </script>
</body>
</html>
