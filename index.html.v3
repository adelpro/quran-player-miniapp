  <style>
    /* Open-Tarteel Inspired Design System */
    :root {
      --background: #ffffff;
      --foreground: #171717;
      --card: #f9fafb;
      --card-hover: #f3f4f6;
      --border: #e5e7eb;
      --border-hover: #d1d5db;
      --muted: #9ca3af;
      --primary: #0190dd;
      --primary-hover: #075985;
      --success: #10b981;
      --shadow-sm: 0 1px 2px rgba(0,0,0,0.05);
      --shadow: 0 4px 6px -1px rgba(0,0,0,0.1);
      --shadow-lg: 0 10px 15px -3px rgba(0,0,0,0.1);
      --radius: 16px;
      --radius-sm: 8px;
      --transition: all 0.2s ease;
    }

    /* Dark mode */
    [data-theme="dark"] {
      --background: #0a0a0a;
      --foreground: #ededed;
      --card: #1f2937;
      --card-hover: #374151;
      --border: #374151;
      --border-hover: #4b5563;
      --muted: #9ca3af;
      --primary: #60a5fa;
      --primary-hover: #93c5fd;
      --shadow-sm: 0 1px 2px rgba(0,0,0,0.3);
      --shadow: 0 4px 6px -1px rgba(0,0,0,0.4);
      --shadow-lg: 0 10px 15px -3px rgba(0,0,0,0.5);
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      background: var(--background);
      color: var(--foreground);
      min-height: 100vh;
      transition: var(--transition);
    }

    .container {
      max-width: 420px;
      margin: 0 auto;
      padding: 20px;
      padding-bottom: 140px;
    }

    /* Header */
    .header {
      padding: 16px 0;
      margin-bottom: 24px;
    }

    .header h1 {
      font-size: 22px;
      font-weight: 600;
      letter-spacing: -0.5px;
    }

    /* Cards */
    .card {
      background: var(--card);
      border: 1px solid var(--border);
      border-radius: var(--radius);
      padding: 20px;
      margin-bottom: 16px;
      transition: var(--transition);
      box-shadow: var(--shadow-sm);
    }

    .card:hover {
      border-color: var(--border-hover);
      box-shadow: var(--shadow);
    }

    .card-title {
      font-size: 13px;
      font-weight: 600;
      color: var(--muted);
      text-transform: uppercase;
      letter-spacing: 0.5px;
      margin-bottom: 14px;
    }

    /* Source tabs */
    .sources {
      display: flex;
      gap: 8px;
      overflow-x: auto;
      padding-bottom: 8px;
      scrollbar-width: none;
    }

    .sources::-webkit-scrollbar {
      display: none;
    }

    .source-tab {
      padding: 10px 18px;
      border-radius: 20px;
      border: 1px solid var(--border);
      background: var(--card);
      color: var(--muted);
      font-size: 14px;
      white-space: nowrap;
      cursor: pointer;
      transition: var(--transition);
    }

    .source-tab:hover {
      border-color: var(--primary);
      color: var(--primary);
    }

    .source-tab.active {
      background: var(--primary);
      border-color: var(--primary);
      color: white;
    }

    /* Search */
    .search-box {
      position: relative;
    }

    .search-input {
      width: 100%;
      padding: 14px 18px;
      padding-right: 48px;
      border: 1px solid var(--border);
      border-radius: var(--radius);
      background: var(--card);
      color: var(--foreground);
      font-size: 16px;
      outline: none;
      transition: var(--transition);
    }

    .search-input:focus {
      border-color: var(--primary);
      box-shadow: 0 0 0 3px rgba(1, 144, 221, 0.1);
    }

    .search-input::placeholder {
      color: var(--muted);
    }

    .search-icon {
      position: absolute;
      right: 16px;
      top: 50%;
      transform: translateY(-50%);
      color: var(--muted);
      font-size: 16px;
    }

    /* Reciter list - Simple, clean */
    .reciter-list {
      display: flex;
      flex-direction: column;
      gap: 8px;
    }

    .reciter-item {
      display: flex;
      align-items: center;
      padding: 14px 16px;
      background: var(--card);
      border: 1px solid var(--border);
      border-radius: var(--radius-sm);
      cursor: pointer;
      transition: var(--transition);
    }

    .reciter-item:hover {
      background: var(--card-hover);
      border-color: var(--border-hover);
    }

    .reciter-item.active {
      background: var(--card-hover);
      border-color: var(--primary);
      border-width: 1.5px;
    }

    .reciter-radio {
      width: 20px;
      height: 20px;
      border-radius: 50%;
      border: 2px solid var(--border);
      margin-left: 14px;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: var(--transition);
      flex-shrink: 0;
    }

    .reciter-item.active .reciter-radio {
      border-color: var(--primary);
      background: var(--primary);
    }

    .reciter-item.active .reciter-radio::after {
      content: '';
      width: 8px;
      height: 8px;
      border-radius: 50%;
      background: white;
    }

    .reciter-info {
      flex: 1;
      min-width: 0;
    }

    .reciter-name {
      font-size: 15px;
      font-weight: 500;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }

    .reciter-riwayah {
      font-size: 13px;
      color: var(--muted);
      margin-top: 2px;
    }

    /* Player - Fixed bottom */
    .player {
      position: fixed;
      bottom: 0;
      left: 50%;
      transform: translateX(-50%);
      width: 100%;
      max-width: 420px;
      background: var(--card);
      border-top: 1px solid var(--border);
      padding: 16px 20px 20px;
      box-shadow: 0 -4px 20px rgba(0,0,0,0.1);
      z-index: 100;
    }

    .player-content {
      display: flex;
      align-items: center;
      gap: 14px;
    }

    .player-avatar {
      width: 48px;
      height: 48px;
      border-radius: 12px;
      background: linear-gradient(135deg, var(--primary), var(--primary-hover));
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      font-weight: 600;
      font-size: 14px;
      flex-shrink: 0;
    }

    .player-info {
      flex: 1;
      min-width: 0;
    }

    .player-title {
      font-weight: 600;
      font-size: 15px;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }

    .player-artist {
      font-size: 13px;
      color: var(--muted);
      margin-top: 2px;
    }

    .player-controls {
      display: flex;
      align-items: center;
      gap: 6px;
    }

    .player-btn {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      border: none;
      background: transparent;
      color: var(--foreground);
      cursor: pointer;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 18px;
      transition: var(--transition);
    }

    .player-btn:hover {
      background: var(--card-hover);
    }

    .player-btn.play {
      background: var(--foreground);
      color: var(--background);
      font-size: 16px;
    }

    .player-btn.play:hover {
      opacity: 0.9;
    }

    /* Progress */
    .progress {
      margin-top: 14px;
    }

    .progress-bar {
      width: 100%;
      height: 6px;
      background: var(--border);
      border-radius: 3px;
      overflow: hidden;
      cursor: pointer;
    }

    .progress-fill {
      width: 35%;
      height: 100%;
      background: var(--primary);
      border-radius: 3px;
      transition: width 0.1s linear;
    }

    .progress-time {
      display: flex;
      justify-content: space-between;
      font-size: 12px;
      color: var(--muted);
      margin-top: 6px;
      font-variant-numeric: tabular-nums;
    }

    /* Theme toggle - subtle */
    .theme-toggle {
      background: transparent;
      border: none;
      padding: 8px;
      cursor: pointer;
      border-radius: 50%;
      color: var(--muted);
      transition: var(--transition);
      font-size: 18px;
    }

    .theme-toggle:hover {
      background: var(--card-hover);
      color: var(--foreground);
    }
  </style>
</head>
